{
  "name": "escrow-platform",
  "version": "1.0.0",
  "description": "Full production-level escrow platform for the Nigerian market",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "worker",
    "webhooks",
    "shared",
    "tests"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:worker": "npm run dev --workspace=worker",
    "dev:webhooks": "npm run dev --workspace=webhooks",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspace=tests",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "migrate": "npm run migrate --workspace=backend",
    "migrate:dev": "npm run migrate:dev --workspace=backend",
    "generate": "npm run generate --workspace=backend",
    "docker:up": "docker-compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/docker-compose.yml down",
    "docker:logs": "docker-compose -f infra/docker-compose.yml logs -f"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
