# Escrow Platform Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://escrow_user:escrow_password@localhost:5432/escrow_db

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# JWT Authentication
# ============================================
# Generate strong secrets: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this-in-production
REFRESH_TOKEN_EXPIRES_IN=30d

# ============================================
# OTP Configuration
# ============================================
OTP_SECRET=your-otp-secret-key-change-this-in-production
OTP_EXPIRY_MINUTES=5

# ============================================
# Paystack Configuration
# ============================================
# Get your keys from: https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret

# ============================================
# Monnify Configuration
# ============================================
# Get your keys from: https://app.monnify.com/developers/api-keys
MONNIFY_API_KEY=your_monnify_api_key
MONNIFY_SECRET_KEY=your_monnify_secret_key
MONNIFY_CONTRACT_CODE=your_monnify_contract_code
MONNIFY_WEBHOOK_SECRET=your_monnify_webhook_secret

# ============================================
# Admin Configuration
# ============================================
# Comma-separated list of allowed IP addresses for admin access
# Example: ADMIN_IP_ALLOWLIST=127.0.0.1,192.168.1.100
ADMIN_IP_ALLOWLIST=

# ============================================
# Email Configuration (SendGrid)
# ============================================
# Get your API key from: https://app.sendgrid.com/settings/api_keys
# Leave empty to use mock mode (logs emails instead of sending)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Escrow Platform

# ============================================
# SMS Configuration (Termii - Nigeria)
# ============================================
# Get your API key from: https://accounts.termii.com/
# Leave empty to use mock mode (logs SMS instead of sending)
TERMII_API_KEY=
TERMII_SENDER_ID=Escrow

# ============================================
# File Storage Configuration
# ============================================
# Choose provider: S3, CLOUDINARY, or MOCK
STORAGE_PROVIDER=MOCK
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf

# AWS S3 Configuration (if using S3)
# Get credentials from: https://console.aws.amazon.com/iam/
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Cloudinary Configuration (if using Cloudinary)
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================
# Frontend Environment Variables
# ============================================
# For Next.js frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# For Vite apps (buyer, seller, admin)
VITE_API_URL=http://localhost:3001

# ============================================
# Notes
# ============================================
# 1. Never commit the .env file to version control
# 2. Use strong, unique secrets in production
# 3. Generate secrets using: openssl rand -base64 32
# 4. Keep secrets secure and rotate them regularly
# 5. Use different secrets for development and production
# 6. Mock modes available for email, SMS, and storage (no API keys needed for development)
